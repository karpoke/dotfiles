# http://editorconfig.org

root = true

[*]
charset                  = utf-8
end_of_line              = lf
indent_size              = 4
indent_style             = space
insert_final_newline     = true
trim_trailing_whitespace = true

[*.py]
max_line_length          = 79

[*.js]
max_line_length          = 119

[*.html]
max_line_length          = 119

[*.{sc,le,c}ss]
indent_size              = 2
max_line_length          = 119

[*.feature]
indent_size              = 2
max_line_length          = 119

[*.{md,markdown}]
indent_style             = tab
